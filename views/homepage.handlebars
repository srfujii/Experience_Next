<!-- Loop over each object in the blogposts array -->
<h2 class="mt-5 mb-5 ml-5">Welcome to ExperienceNext...connecting you to next-level experiences</h2>
<div class="container container-fluid mt-5 mb-5">
 
<ul class="no-bullets">
{{#each experienceProviders as |experience| }}
  <li class="borders pt-5">
    <div class="row mb-4">
      <div class="col-md-2"><img src="{{experience.logo_url}}" /></div>
      <div class="col-md-5">
        <h2><a href="/api/experience/id/{{experience.id}}">{{experience.provider_name}}</a></h2>
        <h5>{{experience.city}}</h5>
      </div>
      <div class="col-md-5">
      <h6>{{experience.category}}:</h6>
      <p>{{experience.description}}</p>
      <h6 class="text-green">{{format_price experience.price}}</h6>
      </div>
  </div>
  </li>
{{/each}}
</ul>

</div>