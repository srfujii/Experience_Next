<!-- Loop over each object in the blogposts array -->
<h2 class="mt-5 mb-5 ml-5">ExperienceNext</h2>
<h4>...Connecting you to next-level experiences</h4>
<div class="container container-fluid mt-5">
 
<ul>
{{#each experienceProviders as |experience| }}
  <li>
    <div class="row mb-4">
      <div class="col-md-5">
        <h2><a href="/api/experience/id/{{experience.id}}">{{experience.provider_name}}</a></h2>
        <p>{{experience.category}} {{experience.city}}</p>
      </div>
      <div class="col-md-7">
      <p>{{experience.description}}</p>
      <p>{{format_price experience.price}}</p>
      </div>
  </div>
  </li>
{{/each}}
</ul>

</div>